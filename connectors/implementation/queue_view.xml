<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="faux_queue_magento_view" model="ir.ui.view">
            <field name="model">faux.queue.magento</field>
            <field name="arch" type="xml">
                <form string="Magento Tasks" version="7.0">
                   <sheet>
                    <group col="4">
                        <field name="queue"/>
                        <field name="task"/>
                        <field name="state"/>
                    </group>
                   </sheet>
                </form>
            </field>
        </record>
        <record id="faux_queue_magento_view_tree" model="ir.ui.view">
            <field name="model">faux.queue.magento</field>
            <field name="arch" type="xml">
                <tree string="Magento Tasks">
                    <field name="queue"/>
                    <field name="task"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="faux_queue_magento_view_search" model="ir.ui.view">
            <field name="model">faux.queue.magento</field>
            <field name="arch" type="xml">
                <search string="Magento Tasks">
                    <field name="queue" string="Queue"/>
                    <field name="task"/>
                    <field name="state"/>
                </search>
            </field>
        </record>
        <record id="faux_queue_magento_act" model="ir.actions.act_window">
            <field name="name">Magento Tasks</field>
            <field name="res_model">faux.queue.magento</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="faux_queue_magento_view_tree"/>
        </record>
        <menuitem id="menu_faux_queue_magento_act" action="faux_queue_magento_act" parent="base.menu_ir_cron"/>

    </data>
</openerp>

